<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/absensi_shape"
    android:padding="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/mapel_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pemrograman Berbasis Object"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hari : "
            />
        <TextView
            android:id="@+id/mapel_hari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senin"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jam : "
            />
        <TextView
            android:id="@+id/mapel_jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas : "
            />
        <TextView
            android:id="@+id/mapel_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R02"/>
    </LinearLayout>


</LinearLayout>